{ 
    "version": 2, 
    "builds": [
        { "src": "dist/**", "use": "@vercel/static" },
        { "src": "api/index.js", "use": "@vercel/node" }
    ],
    "routes": [
        { "handle": "filesystem" },
        { "src": "/api/(.*)", "dest": "/api/index.js" },
        { "src": "/(.*)", "dest": "/dist/index.html" }
    ]
}